<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: #021A3E;"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.otobussirketiotomasyonu.GirisController">
    <children>

        <!-- Görselim -->
        <ImageView fitHeight="400.0" fitWidth="304.0" layoutX="-4.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../Images/otobus.jpg" />
            </image>
        </ImageView>

        <!-- Yetkili Girişi Butonu -->
        <Button layoutX="354.0" layoutY="109.0" mnemonicParsing="false" onAction="#yetkiliGirisButton" prefHeight="36.0" prefWidth="211.0" style="-fx-background-radius: 100; -fx-background-color: #f8f8f8;" text="YETKİLİ GİRİŞİ">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Button>

        <!-- Kullanıcı Girişi Butonu -->
        <Button layoutX="354.0" layoutY="241.0" mnemonicParsing="false" onAction="#kullaniciGirisButton" prefHeight="36.0" prefWidth="211.0" style="-fx-background-radius: 100; -fx-background-color: #f8f8f8;" text="KULLANICI GİRİŞİ">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Button>
    </children>
</AnchorPane>